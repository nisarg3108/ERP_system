generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// BASE SAAS ENTITIES

model Tenant {
  id        String   @id @default(uuid())
  name      String
  status    String   @default("ACTIVE")
  createdAt DateTime @default(now())

  users     User[]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      String
  tenantId  String
  createdAt DateTime @default(now())

  tenant    Tenant   @relation(fields: [tenantId], references: [id])
}
